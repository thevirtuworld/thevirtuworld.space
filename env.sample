# === General AI Settings ===
AI_PROVIDER=openai                # Options: openai, ollama, custom, azure, local, etc.
AI_MODEL=gpt-4                    # Model name or ID (e.g., gpt-4, llama2, mistral, custom-model)
AI_API_BASE_URL=                  # Override for custom API endpoint (e.g., http://localhost:11434 for Ollama)
AI_API_KEY=                       # API key for OpenAI, Azure, or other providers
AI_ORG_ID=                        # (Optional) Organization ID for OpenAI or other providers

# === Ollama / Local LLMs ===
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# === Azure OpenAI ===
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=

# === Custom AI / OpenAPI-Compatible ===
CUSTOM_AI_API_URL=
CUSTOM_AI_API_KEY=

# === AI Behavior Tuning ===
AI_TEMPERATURE=0.7                # Creativity of AI responses (0.0 - 1.0)
AI_MAX_TOKENS=512                 # Max tokens per response
AI_TOP_P=1.0
AI_FREQUENCY_PENALTY=0
AI_PRESENCE_PENALTY=0

# === Game-Specific AI Settings ===
ENTITY_AI_PERSONALITY_RANDOMNESS=0.2
ENTITY_AI_DECISION_INTERVAL=30    # Frames between AI decisions

# === Appwrite Configuration ===
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT=your-project-id
NEXT_PUBLIC_FUNCTION_ID=your-web3-auth-function-id
APPWRITE_API_KEY=your-api-key-with-users-permissions

# === Stacks Blockchain Configuration ===
NEXT_PUBLIC_STACKS_NETWORK=testnet  # Options: mainnet, testnet
NEXT_PUBLIC_STACKS_API_URL=https://api.testnet.hiro.so
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_CONTRACT_NAME=virtuworld-nft

# === Image Generation (AI) ===
NEXT_PUBLIC_IMAGE_GENERATION_ENABLED=true

# === Other Settings ===
NEXT_PUBLIC_APP_ENV=development   # Set to 'production' in production
